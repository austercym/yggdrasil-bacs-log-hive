    </property>

    <property>
        <name>hadoop.proxyuser.hdfs.hosts</name>
        <value>*</value>
    </property>

    <property>
        <name>hadoop.proxyuser.hive.groups</name>
        <value>*</value>
    </property>

    <property>
        <name>hadoop.proxyuser.hive.hosts</name>
        <value>hdp-g1-0.node.consul,hdp-g1-1.node.consul,hdp-g1-2.node.consul</value>
    </property>

    <property>
        <name>hadoop.proxyuser.HTTP.groups</name>
        <value>users</value>
    </property>

    <property>
        <name>hadoop.proxyuser.HTTP.hosts</name>
        <value>hdp-g1-2.node.consul</value>
    </property>

    <property>
        <name>hadoop.proxyuser.knox.groups</name>
        <value>users</value>
    </property>

    <property>
        <name>hadoop.proxyuser.knox.hosts</name>
        <value>hdp-g3-0.node.consul</value>
    </property>

    <property>
        <name>hadoop.proxyuser.livy.groups</name>
        <value>*</value>
    </property>

    <property>
        <name>hadoop.proxyuser.livy.hosts</name>
        <value>*</value>
    </property>

    <property>
        <name>hadoop.proxyuser.oozie.groups</name>
        <value>*</value>
    </property>

    <property>
        <name>hadoop.proxyuser.oozie.hosts</name>
        <value>hdp-g1-2.node.consul</value>
    </property>

    <property>
        <name>hadoop.proxyuser.yarn.groups</name>
        <value>*</value>
    </property>

    <property>
        <name>hadoop.proxyuser.yarn.hosts</name>
        <value>hdp-g1-0.node.consul,hdp-g1-1.node.consul</value>
    </property>

    <property>
        <name>hadoop.proxyuser.zeppelin.groups</name>
        <value>*</value>
    </property>

    <property>
        <name>hadoop.proxyuser.zeppelin.hosts</name>
        <value>*</value>
